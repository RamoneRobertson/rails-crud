<div class="container p-3">
  <h1>New Restaurant</h1>
  <div class="row">
    <div class="col-6">
      <!-- app/views/restaurants/new.html.erb -->
      <%= form_with model: @restaurant do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :address %>
        <%= f.text_field :address %>
        <%= f.label :rating %>
        <%= f.number_field :rating %>
        <%= f.submit class: 'input-group-text' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
